{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, //할일: 여기 에러잡기
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true,
    "jsx": "react-jsx",

    /* Output settings */
    "composite": true, // 필수: 프로젝트 참조를 사용하기 위해 추가
    "emitDeclarationOnly": true, // 필수: 출력 JS 파일 생성을 하지 않고, 타입 선언 파일만 생성

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
